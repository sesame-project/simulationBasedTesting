@namespace(
	uri="http://ExSceMM",
	prefix="ExSceMM")
package MRSPackage;

class MRS {
    val Topic[*] topics;
	attr String launchFileLocation;
	val Node[*] nodes;
	val Simulator[1] simulator;
	val Type[*] propertyType;
}

class Node {
	attr String name;
	ref Topic[*] subscriber;
	ref Topic[*] publisher;
	ref ComponentProperty[*] properties;
}

class Topic {
	attr String name;
	attr String type;
}

class Type {
	attr String propertyType;
	ref Type[*] subTypes;
}

class ComponentProperty {
	attr String name;
	ref Type[1] type;
	ref ComponentProperty[*] subparameter;
}

abstract class Simulator {
}

class ROSSimulator extends Simulator {
	attr String hostname;
	attr String port;
}

class MOOSSimulator extends Simulator {
	attr String hostname;
	attr String port;
}

